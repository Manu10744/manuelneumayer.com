                            <img src="/assets/img/Java.svg">
                            <h3>Java</h3>
                        </div><!--

                        --><div class="proglang-container">
                            <img src="/assets/img/git.svg">
                            <h3>GIT</h3>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <%- include partials/footer.ejs %>

        <!-- FOR CHANGING NAVBAR ON SCROLL-->
        <script src="/assets/js/navbar.js"></script>
    </body>
</html>