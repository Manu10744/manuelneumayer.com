<!DOCTYPE html>
<html>

<head>
    <title>Manuel Neumayer</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/assets/css/compiled.css" rel="stylesheet">
</head>

<body data-barba="wrapper">
    <main data-barba="container" data-barba-namespace="about">
        <header>
            <div class="mobile-nav-toggler">
                <div class="mobile-nav-line first"></div>
                <div class="mobile-nav-line second"></div>
            </div>
            <div class="navigation">
                <ul>
                    <li><a href="/<%- language %>"> <%- docText.common.home %> </a></li>
                    <li class="active-nav-item"><a href="/<%- language %>/about"> <%- docText.common.about %> </a></li>
                    <li><a href="/<%- language %>/portfolio"> <%- docText.common.portfolio %> </a></li>
                    <li><a href="#"> <%- docText.common.impressum %> </a></li>
                </ul>

                <%- include ('partials/mobileNavInfo.ejs') %>
            </div>
            <div class="logo">
                <h3><span class="letters">Web Development</span></h3>
                <p><span class="letters">By Manuel Neumayer</span></p>
            </div>
        </header>

        <div class="page-wrapper">
            <div class="about-hero">
                <svg class="wave" viewBox="0 0 500 150" preserveAspectRatio="none" style="width: 100%;">
                    <path d="M-0.27,135.69 C149.99,150.00 291.48,73.52 501.97,135.69 L500.00,150.00 L0.00,150.00 Z"
                        style="stroke: none; fill: #f7f7f7;"></path>
                </svg>

                <svg class="wave" viewBox="0 0 500 150" preserveAspectRatio="none" style="width: 100%;">
                    <path d="M0.28,131.73 C149.99,150.00 351.30,28.13 500.27,134.70 L500.00,150.00 L0.00,150.00 Z"
                        style="stroke: none; fill: #f7f7f7; fill-opacity: 0.3;"></path>
                </svg>

                <svg class="wave" viewBox="0 0 500 150" preserveAspectRatio="none" style="width: 100%;">
                    <path d="M0.28,131.73 C149.99,150.00 354.12,40.95 501.97,147.53 L501.97,153.45 L0.00,150.00 Z"
                        style="stroke: none; fill: #f7f7f7; fill-opacity: 0.5"></path>
                </svg>

                <div data-reveal-type="scaleXFromRight" class="decorator-line revealable"></div>
            </div>

            <div data-reveal-type="fade" class="about-intro revealable">
                <div class="container">
                    <div class="prev-heading-wrapper">
                        <h3> <%- docText.about_page.prev_heading %> </h3>
                        <span class="heading-line"></span>
                    </div>
                    <h1 class="typewriter"> <%- docText.about_page.cv_headline %> </h1>

                    <div class="bg-points"></div>
                </div>
            </div>

            <div class="timeline-wrapper">
                <div class="container">
                    <h1 data-reveal-type="fade" class="timeline-heading revealable"> <%- docText.about_page.timeline_headline %> </h1>

                    <div data-reveal-type="timeline" class="timeline revealable">
                        <div data-reveal-type="fadeUp" class="timeline-item right revealable">
                            <div class="timeline-item-content">
                                <div class="item-icon-container">
                                    <i class="fas fa-graduation-cap"></i>
                                </div>
                                <span class="timestamp"> <%- docText.about_page.timeline_item_first_timestamp %> </span>
                                <h1 class="item-title typewriter"> <%- docText.about_page.timeline_item_first_headline %> </h1>
                                <h3 class="item-location"> <%- docText.about_page.timeline_item_first_location %> </h3>
                            </div>
                        </div>

                        <div data-reveal-type="fadeUp" class="timeline-item left revealable">
                            <div class="timeline-item-content">
                                <div class="item-icon-container">
                                    <i class="fas fa-graduation-cap"></i>
                                </div>
                                <span class="timestamp"> <%- docText.about_page.timeline_item_second_timestamp %> </span>
                                <h1 class="item-title typewriter"> <%- docText.about_page.timeline_item_second_headline %> </h1>
                                <h3 class="item-location"> <%- docText.about_page.timeline_item_second_location %> </h3>
                            </div>
                        </div>

                        <div data-reveal-type="fadeUp" class="timeline-item right revealable">
                            <div class="timeline-item-content">
                                <div class="item-icon-container">
                                    <i class="fas fa-graduation-cap"></i>
                                </div>
                                <span class="timestamp"> <%- docText.about_page.timeline_item_third_timestamp %> </span>
                                <h1 class="item-title typewriter"> <%- docText.about_page.timeline_item_third_headline %> </h1>
                                <h3 class="item-location"> <%- docText.about_page.timeline_item_third_location %> </h3>
                            </div>
                        </div>

                        <div data-reveal-type="fadeUp" class="timeline-item left revealable">
                            <div class="timeline-item-content">
                                <div class="item-icon-container">
                                    <i class="fas fa-graduation-cap"></i>
                                </div>
                                <span class="timestamp"> <%- docText.about_page.timeline_item_fourth_timestamp %> </span>
                                <h1 class="item-title typewriter"> <%- docText.about_page.timeline_item_fourth_headline %> </h1>
                                <h3 class="item-location"> <%- docText.about_page.timeline_item_fourth_location %> </h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="personal-info-wrapper">
                <div class="container">
                    <div data-reveal-type="fade" class="personal-intro revealable">
                        <div class="prev-heading-wrapper">
                            <h3> <%- docText.about_page.prev_heading %> </h3>
                            <span class="heading-line"></span>
                        </div>
                        <h1 class="typewriter"> <%- docText.about_page.personal_headline %> </h1>
                    </div>

                    <div class="personal-info-content">
                        <img data-reveal-type="fade" class="personal-image revealable" src="/assets/img/FaktorZehnBild.jpg">
                        <div data-reveal-type="fade" class="personal-info revealable">
                            <h3 class="info-item"> <%- docText.about_page.personal_name_key %> </h3>
                            <h3 class="info-item gray-colored "> <%- docText.about_page.personal_name_value %> </h3>
                            <h3 class="info-item"> <%- docText.about_page.personal_age_key %> </h3>
                            <h3 class="info-item gray-colored "> <%- docText.about_page.personal_age_value %> </h3>
                            <h3 class="info-item"> <%- docText.about_page.personal_lang_key %> </h3>
                            <h3 class="info-item gray-colored "> <%- docText.about_page.personal_lang_value %> </h3>
                            <h3 class="info-item"> <%- docText.about_page.personal_email_key %> </h3>
                            <h3 class="info-item gray-colored "> <%- docText.about_page.personal_email_value %> </h3>
                        </div>
                    </div>

                    <span class="decorator-line-thin"></span>
                    <span class="decorator-line-thick"></span>
                    <div class="bg-points"></div>
                </div>
            </div>

            <div class="tech-wrapper">
                <div data-reveal-type="scaleXFromLeft" class="decorator-line revealable"></div>
                <h1 data-reveal-type="fade" class="tech-heading revealable"> <%- docText.about_page.technologies_prev_headline %> </h1>

                <div class="tech-stack">
                    <div data-reveal-type="fade" class="tech-stack-intro revealable">
                        <div class="prev-heading">
                            <span class="heading-line"></span>
                            <h3> <%- docText.about_page.prev_heading %> </h3>
                            <span class="heading-line"></span>
                        </div>
                        <h1 class="typewriter"> <%- docText.about_page.technologies_headline %> </h1>
                    </div>

                    <div data-reveal-type="fade" class="tech-glider revealable">
                        <div data-glide-el="track" class="glide__track">
                            <ul class="glide__slides">
                                <li class="glide__slide">
                                    <div class="tech-glider-item html5"></div>
                                </li>
                                <li class="glide__slide">
                                    <div class="tech-glider-item css3"></div>
                                </li>
                                <li class="glide__slide">
                                    <div class="tech-glider-item js"></div>
                                </li>
                                <li class="glide__slide">
                                    <div class="tech-glider-item tailwind"></div>
                                </li>
                                <li class="glide__slide">
                                    <div class="tech-glider-item java"></div>
                                </li>
                                <li class="glide__slide">
                                    <div class="tech-glider-item python"></div>
                                </li>
                                <li class="glide__slide">
                                    <div class="tech-glider-item mongodb"></div>
                                </li>
                                <li class="glide__slide">
                                    <div class="tech-glider-item sql"></div>
                                </li>
                                <li class="glide__slide">
                                    <div class="tech-glider-item figma"></div>
                                </li>
                                <li class="glide__slide">
                                    <div class="tech-glider-item git"></div>
                                </li>
                            </ul>
                        </div>
                        <div class="glide__bullets" data-glide-el="controls[nav]">
                            <button class="glide__bullet" data-glide-dir="=0"></button>
                            <button class="glide__bullet" data-glide-dir="=1"></button>
                            <button class="glide__bullet" data-glide-dir="=2"></button>
                            <button class="glide__bullet" data-glide-dir="=3"></button>
                            <button class="glide__bullet" data-glide-dir="=4"></button>
                            <button class="glide__bullet" data-glide-dir="=5"></button>
                            <button class="glide__bullet" data-glide-dir="=6"></button>
                            <button class="glide__bullet" data-glide-dir="=7"></button>
                            <button class="glide__bullet" data-glide-dir="=8"></button>
                            <button class="glide__bullet" data-glide-dir="=9"></button>
                        </div>
                    </div>
                </div>
            </div>


            <%- include ('partials/contactSection.ejs') %>

            <%- include ('partials/languageSelection.ejs') %>
        </div>
    </main>

    <div class="transition-container"></div>
    <%- include ('partials/footer.ejs') %>

    <script>
        // Check for Browser Support of the IntersectionObserver API and use a polyfill in case it's not supported
        if (!('IntersectionObserver' in window)) {
            const polyFill = document.createElement("script");
            polyFill.src = "https://polyfill.io/v3/polyfill.min.js?features=IntersectionObserver";
            document.body.appendChild(polyFill);
        }
    </script>

    <!-- BarbaJS -->
    <script src="https://unpkg.com/@barba/core"></script>
    <script src="/assets/js/anime.min.js"></script>
    <!-- FontAwesome -->
    <script defer src="/assets/js/fontawesome.min.js"></script>
    <script defer src="/assets/js/all.min.js"></script>
    <!-- GlideJS -->
    <script type="module" src="/assets/js/glide.min.js"></script>

    <script type="module" src="/assets/js/gliderJSConfig.js"></script>
    <script type="module" src="/assets/js/select-language.js"></script>
    <script type="module" src="/assets/js/mobile-navigation.js"></script>
    <script type="module" src="/assets/js/animations.js"></script>
    <script type="module" src="/assets/js/typewriter.js"></script>
    <script type="module" src="/assets/js/barbaConfig.js"></script>
</body>

</html>